{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/master/cspell.schema.json",
    "version": "0.1",
    "files": [
        "**/*"
    ],
    "enabledLanguageIds": [
        "markdown",
        "typescript"
    ],
    "ignorePaths": [
        "node_modules",
        "coverage",
        "doc/api/**",
        "data/**",
        "src/sandbox/**",
        "src/test/data/**",
        "package-lock.json",
        "git",
        "lib",
        "dist",
        "*.log",
        "*.tgz"
    ],
    "words": [
        "kayahr",
        "LEDs",
        "LIBUSB",
        "Reimer",
        "Saitek"
    ],
    "language": "en"
}