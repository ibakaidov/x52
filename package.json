{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/x52pro",
    "version": "1.2.0",
    "description": "Library to control the LEDs and MFD of a Logitech/Saitek X52 Pro Joystick",
    "keywords": [
        "logitech",
        "saitek",
        "x52pro"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": "github:kayahr/x52pro",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib",
        "compile": "tsc",
        "watch": "tsc -w",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run clean && npm run compile",
        "test": "npm run cspell && npm run lint"
    },
    "bin": {
        "x52pro": "bin/x52pro"
    },
    "files": [
        "bin/",
        "lib/main/",
        "src/main/"
    ],
    "main": "lib/main/index",
    "funding": {
        "url": "https://github.com/kayahr/x52pro?sponsor=1"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "2.1.0",
        "@types/node": "17.0.21",
        "@types/usb": "2.0.5",
        "@typescript-eslint/eslint-plugin": "5.12.1",
        "@typescript-eslint/parser": "5.12.1",
        "cspell": "5.18.5",
        "eslint": "8.10.0",
        "eslint-plugin-deprecation": "1.3.2",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "rimraf": "3.0.2",
        "source-map-support": "0.5.21",
        "typescript": "4.5.5"
    },
    "dependencies": {
        "tslib": "^2.3.1",
        "usb": "^2.1.2"
    }
}
