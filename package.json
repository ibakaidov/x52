{
    "$schema": "http://json.schemastore.org/package",
    "name": "@kayahr/x52pro",
    "version": "1.1.0",
    "description": "Library to control the LEDs and MFD of a Logitech/Saitek X52 Pro Joystick",
    "keywords": [
        "logitech",
        "saitek",
        "x52pro"
    ],
    "license": "SEE LICENSE IN LICENSE.md",
    "repository": "github:kayahr/x52pro",
    "publishConfig": {
        "access": "public"
    },
    "author": {
        "name": "Klaus Reimer",
        "email": "k@ailis.de"
    },
    "scripts": {
        "clean": "rimraf lib",
        "compile": "tsc",
        "watch": "tsc -w",
        "lint": "eslint --max-warnings 0 --ext .ts src",
        "cspell": "cspell --no-progress",
        "prepare": "npm run clean && npm run compile",
        "test": "npm run cspell && npm run lint"
    },
    "bin": {
        "x52pro": "bin/x52pro"
    },
    "files": [
        "bin/",
        "lib/main/",
        "src/main/"
    ],
    "main": "lib/main/index",
    "funding": {
        "url": "https://github.com/kayahr/x52pro?sponsor=1"
    },
    "devDependencies": {
        "@kayahr/eslint-config": "1.6.1",
        "@types/node": "16.11.5",
        "@types/usb": "1.5.3",
        "@typescript-eslint/eslint-plugin": "5.2.0",
        "@typescript-eslint/parser": "5.2.0",
        "cspell": "5.12.3",
        "eslint": "7.32.0",
        "eslint-plugin-deprecation": "1.2.1",
        "eslint-plugin-simple-import-sort": "7.0.0",
        "rimraf": "3.0.2",
        "source-map-support": "0.5.20",
        "typescript": "4.4.4"
    },
    "dependencies": {
        "tslib": "^2.3.1",
        "usb": "^1.8.0"
    }
}
